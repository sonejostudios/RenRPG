# Declare characters used by this game.
define e = Character('Eileen', color="#c8ffc8")

init:
    # button style
    style m_button is button:
        xminimum 120
        xmaximum 120
        yminimum 50
        ymaximum 50
        
    #variables
    $ additem = ""
    $ maxp = 0
    $maxpoints = 16
    

    # playervar
    $ pid = 0
    $ pname = ""
    $ hp = 1
    $ mp = 1
    $ xp = 1
    $ cash = 1
    $ items = []
    
    
    # player1
    $ pid1 = 1
    $ pname1 = "1"
    $ hp1 = 1
    $ mp1 = 1
    $ xp1 = 1
    $ cash1 = 1
    $ items1 = [""]
    
    # player2
    $ pid2 = 1
