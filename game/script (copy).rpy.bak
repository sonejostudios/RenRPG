# CREATE PLAYER 
label firstcreate:
    hide logo
    hide text

    show screen playersave
    centered "Choose a Player"
    jump player1save
     
     
label createplayer:
    show screen playergridsave
    show screen autosave
    show screen playersave
    
    hide logo
    
    
    #menu items
    menu:
        "add item":
            python:
                additem = renpy.input("Add an item:")
                additem = additem.strip()
                #if not additem:
                   # additem = " "
            $ items.append(str(additem))
            jump createplayer
            
        "remove item":
            python:
                additem = renpy.input("Remove an item:")
                additem = additem.strip()
                #if not additem:
                    #additem = ""
            $ items.remove(str(additem))
            jump createplayer
        

        

        " save all and exit":
            hide text
            
            jump start


